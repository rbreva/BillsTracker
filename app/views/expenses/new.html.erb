<%= render "expenses/header" %>

<section class="categories">
  <div class="splash__data">
  <%= form_with model: @expense, url: group_expenses_path(group_id: @group.id), local: true do |f| %>
    <%= f.text_field :name, autofocus: true, placeholder: "Expense name", class: "splash__input box" %>
    <%= f.number_field :amount, placeholder: "Expense amount", class: "splash__input box"  %>
    <div class="form_btn">
      <%= f.submit "Save Bill", class: "btn primary_btn btn_txt" %>
    </div>
  <% end %>
  </div>
</section>

<div class="new_item">
  <%= link_to "Back", group_expenses_path(group_id: @group.id), class: "btn secondary_btn btn_txt" %>
</div>
