<%= render "groups/header" %>
<section class="categories">
  <div class="splash__data">
  <%= form_with model: @group, url: group_path(id: @group.id), local: true, class: "form_gen" do |f| %>
    <%= f.text_field :name, autofocus: true, class: "splash__input box" %>
    <%= f.file_field :icon, class: "splash__input box" %>
    <div class="form_btn">
      <%= f.submit "Update Category", class: 'btn primary_btn btn_txt' %>
    </div>
  <% end %>
  </div>
</section>

<div class="new_item">
  <%= link_to 'Back', group_path(id: @group.id), class: "btn secondary_btn btn_txt" %>
</div>
